// Schema that matches the existing Supabase tables created via SQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// UserProfile model matching existing table
model UserProfile {
  id              String   @id @default(cuid())
  email           String   @unique
  displayName     String?
  region          String?
  profileImageUrl String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Contract model matching existing table
model Contract {
  id             String   @id @default(cuid())
  title          String
  description    String?
  amount         Decimal?
  category       String?
  region         String?
  imageUrl       String?
  uploaderEmail  String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Review model matching existing table
model Review {
  id             String   @id @default(cuid())
  contractId     String
  reviewerEmail  String
  rating         Int
  comment        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// ContractTag model matching existing table
model ContractTag {
  id         String   @id @default(cuid())
  contractId String
  tag        String
  createdAt  DateTime @default(now())
}
