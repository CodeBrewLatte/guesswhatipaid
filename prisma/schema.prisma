// Schema that matches the frontend code expectations

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// UserProfile model matching existing table
model UserProfile {
  id              String   @id @default(cuid())
  email           String   @unique
  displayName     String?
  region          String?
  profileImageUrl String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Contract model matching frontend code expectations
model Contract {
  id             String   @id @default(cuid())
  title          String
  description    String?
  priceCents     Int      // store in cents (what frontend expects)
  unit           String?  // e.g., "sqft", "hour", "flat"
  quantity       Float?   // e.g., 800 sqft
  category       String?
  region         String?
  thumbKey       String?  // thumbnail for previews
  vendorName     String?
  takenOn        DateTime?
  uploaderEmail  String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@index([category, region])
  @@index([priceCents])
}

// Review model matching frontend code expectations
model Review {
  id         String   @id @default(cuid())
  contractId String
  userId     String   // Supabase user ID (what frontend expects)
  email      String   // user email for display
  rating     Int      // -1 or +1
  comment    String?
  createdAt  DateTime @default(now())
  
  @@unique([contractId, userId])
  @@index([contractId])
  @@index([userId])
}

// ContractTag model matching existing table
model ContractTag {
  id         String   @id @default(cuid())
  contractId String
  tag        String
  createdAt  DateTime @default(now())
}
